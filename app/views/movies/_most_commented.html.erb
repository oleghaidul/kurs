<div class="box">
  <div class="head">
    <h2><%= I18n.t("most_commented") %></h2>
    <p class="text-right"><%= link_to I18n.t("see_all"), movies_top_commented_path %></p>
  </div>
  <% if @movies.top_commented.exists? %>
  <% for movie in @movies.top_commented.limit(12) %>
  <div class="movie">
    <div class="movie-image"><span class="name"><%= movie.name %></span>
      <%= link_to image_tag(movie.pictures.first.image.url, :width => 152), movie if movie.pictures.exists? %>
    </div>
    <div class="rating">
      <p><%= I18n.t("rating") %></p>
      <div class="stars">
        <div class="stars-in"> </div>
      </div>
      <span class="comments">12</span>
    </div>
  </div>
  <% end %>
  <% end %>
  <div class="cl">&nbsp;</div>
</div>
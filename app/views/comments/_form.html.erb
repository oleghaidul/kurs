  <%= form_for [parent, @comment] do |f| %>
    <%= f.hidden_field :commentable_id, :value => parent.id %>
    <%= f.hidden_field :commentable_type, :value => parent_class.name %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body, "Comment" %><br />
      <%= f.text_area :body, :rows => '20', :cols => 45 %>
    </p>
    <p><%= f.submit %></p>
  <% end %>

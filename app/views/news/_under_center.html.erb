          <li><%= link_to news.name, news %></li>
        <% end %>
      </ul>
    </div>
    <div class="footbox">
      <h2><%= I18n.t("sports_news") %></h2>
      <ul>
        <% for news in @news.sports %>
          <li><%= link_to news.name, news %></li>
        <% end %>
      </ul>
    </div>
    <div class="footbox">
      <h2><%= I18n.t("games_news") %></h2>
      <ul>
        <% for news in @news.games %>
          <li><%= link_to news.name, news %></li>
        <% end %>
      </ul>
    </div>
    <div class="footbox">
      <h2><%= I18n.t("jobs_news") %></h2>
      <ul>
        <% for news in @news.jobs %>
          <li><%= link_to news.name, news %></li>
        <% end %>
      </ul>
    </div>
    <div class="footbox last">
      <h2><%= I18n.t("movies_news") %></h2>
      <ul>

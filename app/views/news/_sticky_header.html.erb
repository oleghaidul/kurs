<%= content_for :sticky_header do %>
  <div class="wrapper col0">
    <div id="topline">
      <p><%= current_user.email if user_signed_in? %></p>
      <ul>
          <li><%= link_to I18n.t("home_page"), root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to(I18n.t('logout'), destroy_user_session_path, :method => :delete) %></li>
          <li class="last"><%= link_to(I18n.t('edit_profile'), edit_user_registration_path) %></li>
          </li>
        <% else %>
          <li><%= link_to(I18n.t('login'), new_user_session_path)  %></li>
          <li class="last"><%= link_to(I18n.t('register'), new_user_registration_path)  %></li>
        <% end %>
      </ul>
      <br class="clear" />
    </div>
  </div>
<% end %>
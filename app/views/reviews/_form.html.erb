<%= form_for [parent, @review] do |f| %>
  <%= f.hidden_field :reviewable_id, :value => @car.id %>
  <%= f.hidden_field :reviewable_type, :value => "Car" %>
  <p>
    <%= f.label :name, "Title" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body, "Review" %><br />
    <%= f.text_area :body, :rows => '20', :cols => 45 %>
  </p>
  <p><%= f.submit %></p>
<% end %>

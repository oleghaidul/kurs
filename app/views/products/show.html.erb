<div class="center_title_bar"><%= @product.name %></div>
    
    	<div class="prod_box_big">
        	<div class="top_prod_box_big"></div>
            <div class="center_prod_box_big">            
                 <%= render @product.pictures %>
                 
                     <div class="details_big_box">
                         <div class="product_title_big"><%= @product.name %></div>
                         <div class="specifications">
                            Assignment: <span class="blue"><%= @product.assignment %></span><br />

                            Design: <span class="blue"><%= @product.design %></span><br />
                            
                            Construction: <span class="blue"><%= @product.construction %></span><br />
                            
                            Description: <span class="blue"><%= @product.description %>$</span><br />
                         </div>
                         <div class="prod_price_big"><span class="reduce">350$</span>
                            <span class="price"><%= @product.price %>$</span></div>
                         <%= button_to "To Cart", line_items_path(:product_id => @product), 
                                                      :remote => true,
                                                      :disable_with => "Wait...",
                                                      :class => "addtocart" %>
                         <a href="#" class="compare">compare</a>
                     </div>   
                                          
            </div>
            <div class="bottom_prod_box_big"></div>                                
        </div>

    <%= render @product.reviews %>

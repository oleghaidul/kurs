<div class="prod_box">
	<div class="top_prod_box"></div>
    <div class="center_prod_box">            
         <div class="product_title"><%= link_to product.name, category_product_path(product.category, product) %></div>
         <div class="product_img">
         		<% if product.pictures.exists? %>
        			<%= link_to image_tag(product.pictures.first.image.url), [product.category, product] %>   
        		<% else %>
        			<%= link_to image_tag("store/laptop.png"), [product.category, product] %> 
        		<% end %>
         </div>
         <div class="prod_price"><span class="reduce"></span> <span class="price"><%= number_to_currency(product.price) %></span></div>                        
    </div>
    <div class="bottom_prod_box"></div>             
    <div class="prod_details_tab">
    <%= button_to "To Cart", line_items_path(:product_id => product.id), 
                                                :remote => true,
                                                :class => "addtocart",
                                                :disable_with => 'Wait...' %>
    <%= link_to "details", category_product_path(product.category, product), :class => "prod_details" %>
    </div>
</div>